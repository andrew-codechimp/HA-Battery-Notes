{
    "entity": {
        "binary_sensor": {
            "battery_low": {
                "default": "mdi:battery-alert"
            }
        },
        "button": {
            "battery_replaced": {
                "default": "mdi:battery-sync"
            }
        },
        "sensor": {
            "battery_type": {
                "default": "mdi:battery-unknown"
            },
            "battery_last_replaced": {
                "default": "mdi:battery-clock"
            }
        }
    },
    "services": {
        "set_battery_replaced": {
            "service": "mdi:battery-sync"
        },
        "check_battery_last_replaced": {
            "service": "mdi:battery-clock"
        },
        "check_battery_last_reported": {
            "service": "mdi:battery-unknown"
        },
        "check_battery_low": {
            "service": "mdi:battery-alert"
        }
    }
}